# =====================
# Aliases
# =====================
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias cl='clear'

# Grep
alias grep='grep --color=auto'

# Git
alias gst="git status"
alias gcm="git commit -m"
alias gaa="git add ."
alias gpoh="git push origin HEAD"


# Tmux
alias ta="tmux attach"

# Navigation
alias ..="cd .."
alias ...="cd ../.."

# NeoVim
alias v="nvim"

# `bat` alternative for `cat`
alias batcat="batcat --color=always" # Requires `batcat` installed

